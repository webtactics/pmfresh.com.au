---
layout: layouts/grid-detail.njk
section: post
---
{% if articlePDF %}<p><strong>{% if articlePDFtitle %}{{ articlePDFtitle }}{% else %}Related Pdf:{% endif %} </strong><a href="{{ articlePDF }}" title="{{ articlePDFtitle }}" alt="{{ articlePDFtitle }}" target="_blank">{{ articlePDFtitle }} Pdf</a></p>{% endif %}


<div class="detailwrapper">
  <article>
    <div class="grid-2-news">

      <div class="item postdetail">

        <div class="detailcontent">

          <h2>{{ title }}</h2>

          <div class="postdetaildate">
            <p>{{ newsdate.day }} {{ newsdate.month }}, {{ newsdate.year }}</p>
          </div>
            {{ content | safe }}





 <!-- start accordion below -->
  <div class="accordion">

 {% if ingredients %}

  <div class="accordion-item">
    <input id="accordion-trigger-1" class="accordion-trigger-input" type="checkbox"></input>
  <label class="accordion-trigger" for="accordion-trigger-1">Product Ingredients
    </label>
    <section class="accordion-animation-wrapper">
      <div class="accordion-animation">
        <div class="accordion-transform-wrapper">
          <div class="accordion-content">
          {{ ingredients }}
      </div>
        </div>
      </div>
    </section>
  </div>
  {% endif %}
  


 {% if nutrition.EnergyAvgQuantityPerServing %}
  <div class="accordion-item">
    <input id="accordion-trigger-3" class="accordion-trigger-input" type="checkbox"></input>
  <label class="accordion-trigger" for="accordion-trigger-3">Nutritional Information
    </label>
    <section class="accordion-animation-wrapper">
      <div class="accordion-animation">
        <div class="accordion-transform-wrapper">
          <div class="accordion-content">
            <!-- start accordion below -->
            <div class="CGBlogDetailNutrition">
            <div class="row">
            <div class="nutritionservetitle">Product name: {{ title }} </div>
            </div>
            {% if Servingsperpackage or Servingsize %}
            <div class="grid-5-7-prod-detail">
            <div class="nutritiontitle">Serves per pack: {{ Servingsperpackage }}</div>
            <div class="nutritiontitle">  {% if Servingsize %}Serve size: {{ Servingsize }}{% endif %}</div>
            </div>
            {% endif %}
            <div class="grid-4-prod-detail">
            <div class="nutritionquantity"></div>
            <div class="nutritionquantity text-left">Avg Quantity Per Serving</div>
            <div class="nutritionquantity text-center">% Daily Intake</div>
            <div class="nutritionquantity text-right">Avg Quantity per 100g</div>
            </div>
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Energy</div>
            <div class="nutritiontitle text-left">{% if nutrition. EnergyAvgQuantityPerServing %}{{ nutrition. EnergyAvgQuantityPerServing }}{% endif %}</div>
            <div class="nutritiontitle text-center">{% if nutrition.Energy%DailyIntakes %}{{ nutrition.Energy%DailyIntakes }}{% endif %}</div>
            <div class="nutritiontitle text-right">{% if nutrition.EnergyAvgQuantityPer100g %}{{ nutrition.EnergyAvgQuantityPer100g }}{% endif %}</div>
            </div>
         {% if nutrition.ProteinAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Protein</div>
            <div class="nutritiontitle text-left">{% if nutrition.ProteinAvgQuantityPerServing %}{{ nutrition.ProteinAvgQuantityPerServing }}{% endif %}</div>
            <div class="nutritiontitle text-center">{% if nutrition.Protein%DailyIntakes %}{{ nutrition.Protein%DailyIntakes }}{% endif %}</div>
            <div class="nutritiontitle text-right">{% if nutrition.EnergyAvgQuantityPer100g %}{{ nutrition.EnergyAvgQuantityPer100g }}{% endif %}</div>
            </div>    
            {% endif %}

 {% if nutrition.FatAvgQuantityPerServing %} 
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Fat, total</div>
            <div class="nutritiontitle text-left">{% if nutrition.FatAvgQuantityPerServing %}{{ nutrition.FatAvgQuantityPerServing }}{% endif %}</div>
            <div class="nutritiontitle text-center">{% if nutrition.Fat%DailyIntakes %}{{ nutrition.Fat%DailyIntakes }}{% endif %}</div>
            <div class="nutritiontitle text-right">{% if nutrition. FatAvgQuantityPer100g %}{{ nutrition. FatAvgQuantityPer100g }}{% endif %}</div>
            </div>    
            {% endif %}


  
         
        {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">- Saturated</div>
            <div class="nutritiontitle text-center">{$entry->fields.satserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.sat100g->value)}{$entry->fields.sat100g->value}{else}{% endif %}</div>
            </div>    
            {% endif %}     
         {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">- Trans</div>
            <div class="nutritiontitle text-center">{$entry->fields.transserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.trans100g->value)}{$entry->fields.trans100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}   
        {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">- Polyunsaturated</div>
            <div class="nutritiontitle text-center">{$entry->fields.polyserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.poly100g->value)}{$entry->fields.poly100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}    
       {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">- Mono</div>
            <div class="nutritiontitle text-center">{$entry->fields.monoserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.mono100g->value)}{$entry->fields.mono100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}      
     {% if nutrition.EnergyAvgQuantityPerServing %} 
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Cholesterol</div>
            <div class="nutritiontitle text-center">{$entry->fields.cholserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.chol100g->value)}{$entry->fields.chol100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}   
     {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Carbohydrate</div>
            <div class="nutritiontitle text-center">{$entry->fields.carbserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.carb100g->value)}{$entry->fields.carb100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}
      {% if nutrition.EnergyAvgQuantityPerServing %} 
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">- Sugars</div>
            <div class="nutritiontitle text-center">{$entry->fields.sugarserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.sugar100g->value)}{$entry->fields.sugar100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}
     {% if nutrition.EnergyAvgQuantityPerServing %}  
            <div class="grid-4-prod-detail">
            <div class="nutritiontitle">Sodium</div>
            <div class="nutritiontitle text-center">{$entry->fields.sodserving->value}</div>
            <div class="nutritiontitle text-right">{if !empty($entry->fields.sod100g->value)}{$entry->fields.sod100g->value}{else}{% endif %}</div>
            </div>     
            {% endif %}
            
            {if !empty($entry->fields.nutrition->value) && !empty($entry->fields.energyserving->value)}
            <div class="row">
            <div class="nutritiontitle">{$entry->fields.nutrition->value}</div>
            </div>     
            {/if}
            
            {if $entry->fields.nuts->value == "false"}   
            <div class="nuts pad1remtopbottom">This product is nut free</div>     
             {/if}     
                  
              </div>
              <!-- end accordion above -->
</div>
        </div>
      </div>
    </section>
  </div>
  {% endif %}















        </div>
      </div>
        
        <div class="sidebarwrapper">
          <div class="postnewsimage">
            <img src="{{ image }}/tr:w-600,h-400" alt="{{ title }}" title="{{ title }}" width="600px" height="auto" class="postlistimg">
          </div>
        </div>

    </div>

  </article>
</div>


{% include "components/global/tagged.html" %}