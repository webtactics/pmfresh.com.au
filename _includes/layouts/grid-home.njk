{% extends "layouts/grid-default.njk" %}


{% block bodyclass %}<body class="about {{ class }}" >{% endblock %}





{% block content %}
<div class="container">
	<main class="content">


	<div class="content-left-news">

		<div class="text">
    		<div class="titlebox fade-in"><h2 class="heading-text">{{ subtitle }}</h2></div>
      			{{ content | safe }}
		</div>

	</div>

        
<div class="pad6rem"></div>

<div class="two-colum-wrapper">	
    <h2 class="heading-text">What's in Season.</h2>

    <div class="newswrapper fade-in">
	    {%- set postslist = collections['Freshly Prepared Vegetables'] | reverse | limit(4) -%} 
	    {% include "components/postslist-products-4-wide.njk" %}
    </div>
</div>


<div class="two-colum-wrapper">	
    <h2 class="heading-text">News</h2>

    <div class="newswrapper fade-in">
	    {%- set postslist = collections['News'] | reverse -%} 
	    {% include "components/postslist-news-3-wide.njk" %}
    </div>
</div>






	</main>
</div>



{% endblock %}




