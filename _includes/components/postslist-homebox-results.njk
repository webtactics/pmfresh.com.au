
	{% for post in postslist %}
<summary class="resultssummary">



{% if post.data.rain %}
<div class="bordertopsumimage">
<img src="{{ post.data.image }}/tr:w-440,h-293" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="440px" height="auto" class="postlistimg">
</div>
<div class="sumtitle">
<h3 class="sum-title-cancelled">{{ post.data.subtitle }}</h3>
</div>
<div class="postsumdate">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<div class="cancelled">
<h4 class="sum-title-cancelled">Cancelled due to rain</h4>
</div>
{% else %}

			
<div class="bordertopsumimage">
<a href="{{ post.data.results }}" target="_blank"><img src="{{ post.data.image }}/tr:w-440,h-293" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="440px" height="auto" class="postlistimg"></a>
</div>
<div class="sumtitle">
<h3 class="sum-title"><a class="resultstitle" href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}" target="_blank" >{{ post.data.subtitle }}</a></h3>
</div>
<div class="postsumdate">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<h4 class="sum-title"><a  href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}" target="_blank" >Results Pdf &gt;</a></h4>
{% endif %}				

</summary>
		
	{% endfor %}
