<section class="grid-2-columns resultssum" >
	{% for post in postslist | reverse %}
<summary class="grid-1x4 resultssummarysmall">
			

{% if post.data.rain %}
<div class="resultssumroundimage">

	{% if post.data.sumimage %}
	<img src="{{ post.data.sumimage }}/tr:w-100,h-150" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="150px" class="postlistimg">
	{% else %}
	<img src="{{ post.data.image }}/tr:w-100,h-150" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="150px" class="postlistimg">
	{% endif %}

</div>
<div class="resultssumsmallcontent">
<div class="postsumtitle">
<h4>{{ post.data.subtitle }}</h4>
</div>
<div class="postsumdatesmall">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<div class="cancelled">
<h4>Cancelled due to rain</h4>
</div>
</div>
{% else %}

<div class="resultssumroundimage">
		{% if post.data.sumimage %}
<a href="{{ post.data.results }}" target="_blank"><img src="{{ post.data.sumimage }}/tr:w-100,h-150" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="150px" class="postlistimg"></a>
	{% else %}
<a href="{{ post.data.results }}" target="_blank"><img src="{{ post.data.image }}/tr:w-100,h-150" alt="{{ post.data.title }}" title="{{ post.data.title }}" width="100px" height="150px" class="postlistimg"></a>
	{% endif %}
</div>

<div class="resultssumsmallcontent">
<div class="postsumtitle">
<h4><a href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}"target="_blank">{{ post.data.subtitle }}</a></h4>
</div>
<div class="postsumdatesmall">
<p>{{ post.data.eventdate.day }} {{ post.data.eventdate.month }}, {{ post.data.eventdate.year }}</p>
</div>
<a class="resultspdfsmall" href="{{ post.data.results }}" title="{{ post.data.title }}" alt="{{ post.data.title }}" target="_blank">Results Pdf &gt;</a>
</div>	
{% endif %}


				


</summary>
		
	{% endfor %}
</section>